    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bot (Alpaca/MSFT)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "Oversold",
                "Alpaca",
                "--symbol",
                "NASDAQ100",
                "--top",
                "2",
                "--portfolio",
                "paper",
                "--backtest"
            ],
            "justMyCode": false
        },
        {
            "name": "Bot (Binance/ETH)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "AdvancedHarmonicOscillators",
                "Binance",
                "--symbol",
                "ETH-USDT",
                "--backtest",
                "--portfolio",
                "live"
            ],
            "justMyCode": false
        },
        {
            "name": "Bot (ETH Screener)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "StochasticRSIWithRSIAndMACD",
                "Binance",
                "--symbol",
                "ETH-USDT",
                "--as-screener",
                "--all-symbols"
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}